{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "pretty": true,
    "jsx": "react",
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "types": [
      "node"
    ],
  },
  "include": [
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ]
}
